<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="2dp" />
            <solid android:color="@color/channel_menu_radio_check" />
            <stroke android:width="1dp" android:color="@color/channel_menu_radio_storke" />
            <padding android:left="10dp" android:top="8dp" android:bottom="8dp" />
        </shape>
    </item>
    
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="2dp" />
            <solid android:color="@color/channel_menu_radio_press" />
            <stroke android:width="1dp" android:color="@color/channel_menu_radio_storke" />
            <padding android:left="10dp" android:top="8dp" android:bottom="8dp" />
        </shape>
    </item>
    
    <!-- not selected -->
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:radius="2dp" />
            <solid android:color="@color/channel_menu_radio_uncheck" />
            <stroke android:width="1dp" android:color="@color/channel_menu_radio_unstorke" />
            <padding android:left="10dp" android:top="8dp" android:bottom="8dp" />
        </shape>
    </item>
</selector>